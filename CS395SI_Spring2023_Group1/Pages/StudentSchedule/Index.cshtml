@page
@model CS395SI_Spring2023_Group1.Pages.StudentSchedule.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/CS395SI_Spring2023_Group1.styles.css" asp-append-version="true" />

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<h1>Registered Services</h1>

@*  This line can be used to display the 
    email of the student that the related services go to. It does not display for all of the Users
@Model.Spring2024_Group2_Schedule.FirstOrDefault()?.StudentEmail  *@

<p>
    <a asp-page="AvailableService">Enroll in a New Service</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].StudentEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].ServiceID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].SectionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].WeekDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2024_Group2_Schedule[0].EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Spring2024_Group2_Schedule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td class="action-buttons">
                <a asp-page="./Edit" asp-route-id="@item.ScheduleID" class="btn edit-btn" title="Edit">
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <a asp-page="./Details" asp-route-id="@item.ScheduleID" class="btn details-btn" title="View Details">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a asp-page="./Delete" asp-route-id="@item.ScheduleID" class="btn delete-btn" title="Delete"
                    onclick="return confirm('Are you sure you want to delete this item?');">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>

            @* <td>
                <a asp-page="./Edit" asp-route-id="@item.ScheduleID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ScheduleID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ScheduleID">Delete</a> |
                <a asp-page="AvailableService">Enroll in  Service</a>
            </td> *@
        </tr>
}
    </tbody>
</table>
