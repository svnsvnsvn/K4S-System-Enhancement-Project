<div class="container mt-4">
    <h1 class="mb-4">Instructor Dashboard</h1>
    
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Students</h5>
                    <p class="display-4">@Model.StudentsCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Applications</h5>
                    <p class="display-4">@Model.PendingApplicationsCount</p>
                    <a asp-page="/Scheduling/Registration/Index" class="btn btn-outline-light">Review Applications</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Approved Students</h5>
                    <p class="display-4">@Model.ApprovedApplicationsCount</p>
                </div>
            </div>
        </div>
    </div>
    
