@page
@model CS395SI_Spring2023_Group1.Pages.Registration.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/CS395SI_Spring2023_Group1.styles.css" asp-append-version="true" />
<h1>Registered Users</h1>
<p><a asp-page="./Create">Create New User </a></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Profile_Sys[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Profile_Sys[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Profile_Sys[0].PhoneNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Profile_Sys[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Profile_Sys[0].ApplicationStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Spring2023_Group1_Profile_Sys) {
            <tr>
            <td >
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationStatus)
            </td>
            <td>
             
                <a asp-page="./Edit" asp-route-id="@item.Email" class="btn1">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Email" class="btn1">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Email" class="btn1">Delete</a> |
                
            </td>
            <td>
                <form method="post">
                 <input type="hidden" name="StudentEmail"  value="@item.Email" />
                 <input type="submit" value="Schedule" class="btn1"  />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
