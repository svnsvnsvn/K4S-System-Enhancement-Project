@page
@model CS395SI_Spring2023_Group1.Pages.ServicesForAdmin.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<link rel="stylesheet" href="~/CS395SI_Spring2023_Group1.styles.css" asp-append-version="true" />
<h1>Services</h1>
<p><a asp-page="./Create">Create New Service</a></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Services[0].ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Services[0].ServiceID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Services[0].ServiceFrequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Services[0].ServiceDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spring2023_Group1_Services[0].ServiceHours)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Spring2023_Group1_Services)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceFrequency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceHours)
                </td>

                @* <td>
                    <a asp-page="./Edit" asp-route-id="@item.ServiceID" class="btn1" >Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.ServiceID" class="btn1" >Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.ServiceID" class="btn1">Delete</a>
                </td> *@
            
                <td class="action-buttons">
                    <a asp-page="./Edit" asp-route-id="@item.ServiceID" class="btn edit-btn" title="Edit">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.ServiceID" class="btn details-btn" title="View Details">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.ServiceID" class="btn delete-btn" title="Delete"
                        onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="fas fa-trash-alt"></i>
                    </a>

                    <form method="post">
                        <input type="hidden" name="serviceID" value="@item.ServiceID" />
                        <button type="submit" class="btn sections-btn" title="Available Sections">
                            <i class="fas fa-folder-open"></i>
                        </button>
                    </form>

                </td>

                @* <td>
                    <form method="post">
                        <input type="hidden" name="serviceID" value="@item.ServiceID" />
                        <input type="submit" class="btn1" value="Available Sections" />
                    </form>
                </td> *@

            </tr>
        }
    </tbody>
</table>