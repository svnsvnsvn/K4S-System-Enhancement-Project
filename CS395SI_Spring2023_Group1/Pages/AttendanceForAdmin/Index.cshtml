@page
@model CS395SI_Spring2023_Group1.Pages.AttendanceForAdmin.IndexModel

@{
    ViewData["Title"] = Model.SessionTitle;
}

<link rel="stylesheet" href="~/CS395SI_Spring2023_Group1.styles.css" asp-append-version="true" />
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<h2 style="color: goldenrod; font-size: 24px;">@Model.SessionTitle</h2>
<p style="font-size: 18px; font-weight: bold;">Schedule: @Model.ScheduleTime</p>

<div style="display: flex; align-items: center; justify-content: space-between;">
    <!-- Class Overall Attendance Bar (Aligned to the Right) -->
    <div class="attendance-container">
        <label style="font-size: 14px;">Class Overall Attendance</label>
        <div class="progress-wrapper">
            <div class="progress">
                <div class="progress-bar" role="progressbar"
                     style="width: @(Model.ClassAttendancePercentage)%;"
                     aria-valuenow="@(Model.ClassAttendancePercentage)"
                     aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
            <span class="progress-percentage">@(Model.ClassAttendancePercentage.ToString("0.0"))%</span>
        </div>
    </div>
</div>

<style>
    .attendance-container {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        text-align: right;
        margin-left: 20px;
        font-size: 14px;
    }

    /* Adjust layout for progress bar and percentage */
    .progress-wrapper {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .progress {
        width: 150px; /* Smaller width */
        height: 12px; /* Reduce height */
        background-color: #f3f3f3;
        border-radius: 5px;
        overflow: hidden;
        position: relative;
    }

    .progress-bar {
        height: 100%;
        background-color: #4CAF50;
        transition: width 0.5s ease-in-out;
    }

    .progress-percentage {
        font-size: 12px;
        font-weight: bold;
        color: #333;
        min-width: 40px;
    }
</style>

<table class="table" style="border-collapse: collapse; width: 100%;">
    <thead>
        <tr style="background-color: white; font-weight: bold; text-align: left;">
            <th style="padding: 10px;">Student Email</th>

            @{
                var today = DateTime.UtcNow.Date;
                var nextWeekStart = Model.WeekStart.AddDays(7); // Start of the next week
            }

            <th>
                <a href="?sectionID=@Model.SectionID&weekOffset=@(Model.WeekOffset - 1)">
                    <i class="fas fa-arrow-left"></i>
                </a>
            </th>
            @for (var day = 0; day < 7; day++)
            {
                var currentDate = Model.WeekStart.AddDays(day);
                <th style="padding: 10px; min-width: 100px; text-align: center;">
                    @currentDate.ToString("ddd") <br> @currentDate.ToString("MM/dd")
                </th>
            }
            <th>
                @if (nextWeekStart <= today)
                {
                    <a href="?sectionID=@Model.SectionID&weekOffset=@(Model.WeekOffset + 1)">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                }
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var email in Model.AttendanceRecords.Select(a => a.Email).Distinct())
        {
            <tr>
                <td style="color: #8B6F4E; font-weight: bold; padding: 10px;">@email</td>
                <td></td> 
                @for (var day = 0; day < 7; day++)
                {
                    var currentDate = Model.WeekStart.AddDays(day);
                    var record = Model.AttendanceRecords
                        .FirstOrDefault(a => a.Email == email && a.CurrentDate.Date == currentDate);

                    <td style="text-align: center; padding: 10px;">
                        <form class="attendance-form" method="post" asp-page-handler="PostAttendance">
                            <input type="hidden" name="email" value="@email" />
                            <input type="hidden" name="date" value="@currentDate.ToString("yyyy-MM-dd")" />
                            <select name="status" class="status-dropdown" onchange="submitAttendance(this)">
                                <option value="Not Marked" selected="@(record?.AttendanceStatus == "Not Marked" ? "selected" : null)">Not Marked</option>
                                <option value="Present" selected="@(record?.AttendanceStatus == "Present" ? "selected" : null)">Present</option>
                                <option value="Absent" selected="@(record?.AttendanceStatus == "Absent" ? "selected" : null)">Absent</option>
                                <option value="Late" selected="@(record?.AttendanceStatus == "Late" ? "selected" : null)">Late</option>
                                <option value="Excused" selected="@(record?.AttendanceStatus == "Excused" ? "selected" : null)">Excused</option>
                            </select>
                        </form>
                    </td>
                }
                <td></td> 
                <td>
                    @{
                        var studentScheduleID = Model.AttendanceRecords
                            .FirstOrDefault(a => a.Email == email)?.ScheduleID ?? 0;
                    }
                    <a href="/AttendanceForStudent/Index?id=@studentScheduleID" class="btn-action">View Individual</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    async function submitAttendance(selectElement) {
        const form = selectElement.closest("form");
        const formData = new FormData(form);

        const response = await fetch(form.action, {
            method: "POST",
            body: formData
        });

        const result = await response.json();
        if (result.success) {
            console.log(result.message);
        } else {
            console.error("Failed to update attendance.");
        }
    }
    function updateDropdownStyle(selectElement) {
        selectElement.classList.remove("status-present", "status-late", "status-excused", "status-absent");

        const selectedStatus = selectElement.value.trim();

        if (selectedStatus === "Present") {
            console.log("Applying Green Background");
            selectElement.classList.add("status-present");
        } else if (selectedStatus === "Late") {
            selectElement.classList.add("status-late");
        } else if (selectedStatus === "Excused") {
            selectElement.classList.add("status-excused");
        } else if (selectedStatus === "Absent") {
            selectElement.classList.add("status-absent");
        }
    }


    // Apply the correct colors on page load for pre-selected values
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll(".status-dropdown").forEach(select => {
            updateDropdownStyle(select);
            select.addEventListener("change", function() {
                updateDropdownStyle(this);
            });
        });
    });

</script>